default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight using Fastlane Match"
  lane :beta do

    # ğŸ” Matchë¥¼ ì‚¬ìš©í•˜ì—¬ ì½”ë“œ ì„œëª… ì •ë³´ ê°€ì ¸ì˜¤ê¸°
    match(
      type: "appstore", # App Storeìš© í”„ë¡œë¹„ì €ë‹ í”„ë¡œíŒŒì¼
      readonly: true     # ì½ê¸° ì „ìš©ìœ¼ë¡œ ì‚¬ìš© (ì´ë¯¸ ì„¤ì •ëœ ì¸ì¦ì„œë¥¼ í™œìš©)
    )

    # ğŸ“ˆ ë¹Œë“œ ë„˜ë²„ ì¦ê°€
    increment_build_number(xcodeproj: "Pindora.xcodeproj")

    # ğŸ—ï¸ ì•± ë¹Œë“œ ë° ì„œëª…
    build_app(
      scheme: "Pindora",
      export_options: {
        provisioningProfiles: {
          "com.RETIA.Pindora" => "match AppStore com.RETIA.Pindora"
        }
      }
    )

    # App Store Connect API í‚¤ ìƒì„± (í™˜ê²½ë³€ìˆ˜ë¡œë¶€í„° ê°’ ë¶ˆëŸ¬ì˜¤ê¸°)
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
      in_house: false
    )

    # ğŸš€ TestFlight ì—…ë¡œë“œ
    upload_to_testflight(api_key: api_key)
  end  
end

